//- trafficlightframe structure
#trafficlightframe
    #tl-chart-row
        #tl-chart-container
            #trafficlight-chart
            #traffliclight-cursor-indicator
                svg: use(href="#svg-cursor-icon")
                span.location 31.12.2026
                span#cursor-day-state-indicator
        #tl-side-container
            .tl-bulb
            .tl-state-text.for-green
                h3 Bullishe Marktstimmung
                p Der Markt ist im Normalzustand.
            .tl-state-text.for-yellow
                h3 Warnung
                p Der Markt k√∂nnte korrigieren.
            .tl-state-text.for-red
                h3 Bearishe Marktstimmung
                p Der Markt ist in einer Korrektur.
            .tl-state-text.for-blue
                h3 Neutrale Marktstimmung
                p Der Markt stabilisiert sich.
    #tl-controls-row
        label(for="zoom-level-select") Zoomstufe:
        .select-wrapper: select#zoom-level-select
            option(value="max" selected) Maximal
            option(value="12") 12 Monate
            option(value="6") 6 Monate
            option(value="3") 3 Monate