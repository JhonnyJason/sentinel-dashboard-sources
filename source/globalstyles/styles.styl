// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-foreground = black
cd-flash = purple
cd-background = white
cd-info = #517891
cd-dark-blue = #113
cd-button-dark = #113

/*==========================================================
Global Variables
==========================================================*/
// max-content-width = 900px
