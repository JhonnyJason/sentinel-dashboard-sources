// header styles
#header
    background-color #113
    color #fff
    padding 20px
    width 100%
    box-sizing: border-box
    position fixed
    z-index 3

    display flex
    justify-content: flex-start
    gap 30px

    h1
        font-size 30pt
        line-height: 70px
        span
            font-size 20pt
#header-logo
    width: 70px
    height 70px
    color #000
    svg
        width inherit
        height inherit