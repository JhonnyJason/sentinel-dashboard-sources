// Chart Legend Styles
#chart-components-tab
    display none
    height 100%
    width 100%
    overflow-x: hidden
    overflow-y auto
    scrollbar-width: thin;
    
    .legend-series
        cursor: pointer
        opacity 0.4
        color var(--color)

    .visibility
        height 25px
        width 25px
        box-sizing: border-box
        border solid 1px --var(--color)
        background-color transparent

    .experimental
        .sub-text::before
            content:"Experimental! "
            color cd-danger-red

    .legend-series.visible
        opacity 1.0
        .visibility
            background-color --var(--color)
