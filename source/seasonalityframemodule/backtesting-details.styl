#backtesting-details-container
    display none
    border-radius: 3px
    background-color cd-dark-blue
    color white
    margin-top 15px
    padding 40px 20px

    h2
        margin 0 0 15px 0

    .warning
        display none
        margin-top 20px
        padding 10px 15px
        background-color rgba(255, 100, 100, 0.15)
        border-left 3px solid #ff6464
        font-size 0.9em
        color #ffaaaa

#backtesting-details-table
    width 100%
    border-collapse collapse
    font-size 0.95em

    th, td
        padding 8px 20px
        text-align right
        border-left solid 1px alpha(#fff, 0.1)
    th
        background-color rgba(255, 255, 255, 0.1)
        font-weight 500
        border-bottom 2px solid rgba(255, 255, 255, 0.2)

    th.sortable
        cursor pointer
        user-select none
        position relative
        padding-right 20px

        &:hover
            background-color alpha(#fff, 0.2)

        &::after
            content ""
            position absolute
            left 10px
            top 50%
            transform translateY(-50%)
            border 4px solid transparent
            opacity 0.3

        &.sorted::after
            opacity 1

        &.asc::after
            border-bottom-color white
            margin-top -4px

        &.desc::after
            border-top-color white
            margin-top 4px

    th:first-child, td:first-child
        text-align left
        &::after
            right 10px
            left auto

    tbody tr
        border-bottom 1px solid rgba(255, 255, 255, 0.1)

    tbody tr:nth-child(2n)
        background-color alpha(#fff, 0.05)

    tbody tr:hover
        background-color alpha(#fff, 0.2)

    tbody tr.warn
        background-color rgba(255, 100, 100, 0.2)
        opacity 0.7

    .positive
        color #4caf50

    .negative
        color #ff6464