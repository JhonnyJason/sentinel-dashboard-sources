#backtesting-summary-tab
    // position relative
    display none
    color #fff
    overflow: visible
    text-align: left
    padding 20px

    h2
        display flex
        justify-content: space-between
        margin-bottom 20px
        font-size 12pt
    h3 
        font-size 10pt
        margin-bottom 3px
        color #ccc

    #backtesting-summary-grid
        margin-top 30px
        display grid
        grid-template-columns: auto auto
        gap 20px            
        h3 
            text-align: center

    .value
        font-size: 12pt
        font-weight: bold
        margin 0 15px
        text-align: center
    

    #backtesting-connector
        background-color cd-dark-blue
        width 100%
        height 30px
        position absolute
        bottom -25px
        left 0

    // #backtesting-direction
    //     text-align: left
    // #backtesting-timeframe
    //     text-align right

    #backtesting-winning-rate
        display flex
        justify-content: center
        align-items: center
        gap 20px
        margin 10px

    #win-rate-number
        font-size 13pt
        font-weight bold
        
    #win-rate-pie
        height 40px
        width 40px
        svg
            --color-profit: green
            --color-loss: red
            height inherit
            width inherit