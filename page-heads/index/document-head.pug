doctype html
html(lang="de")
    head
        meta(charset='utf-8')
        
        //- Title and Description
        title Sentinel Dashboard
        meta(name='description', content='Das Sentinel Dashboard - Für eine klare Übersicht von wichtigen Makroökonomischen Daten.')
        
        //- Open Graph meta Tags
        meta(property='og:image' content="https://sentinel.ewag-handelssysteme.de/img/logo.png")
        meta(property='og:title' content="Sentinel Dashboard")
        meta(property='og:description' content='Das Sentinel Dashboard - Für eine klare Übersicht von wichtigen Makroökonomischen Daten.')
        meta(property='og:type' content="website")
        meta(property='og:url' content="https://sentinel.ewag-handelssysteme.de")
        meta(property='og:locale' content="de_DE")

        //- Manifest
        link(rel='manifest' href='manifest.json')

        //- Favicon
        link(rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96")
        link(rel="icon" type="image/svg+xml" href="/favicon.svg")
        link(rel="shortcut icon" href="/favicon.ico")
        link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
        meta(name="apple-mobile-web-app-title" content="Sentinel Dashboard")
        
        //- Screen
        meta(name='viewport', content='width=device-width, initial-scale=1.0')



        include styles-include.pug
    body
        include ../../source/index/indexbody.pug
        include scripts-include.pug
